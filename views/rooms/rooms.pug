extends ../layout.pug

block rootNavRight
	i.nav-item#notifload
	.nav-item
			a.button.btn-create-prompt
				i.icon-plus
				span Create

block content
	#page-type-view
		.container.is-fluid
			.columns.is-gapless

				.column.is-narrow.is-hidden-touch.sidebar

					include ../common/sidebar.pug

				.column

					.hero
						h1.title Rooms
						h2.subtitle Manage your rooms
					.content
						.device-list
							each rm in rooms
								.device
									.device-icon: img.is-small(src='/images/devices/')
									.device-state.is-on
									.device-title
										= rm.name
										//span #{lt.device.brand} - #{lt.device.model}
									//if lt.device.room
										.device-room= lt.device.room.name

	include ../modals/bridges-discover.pug